my_list = [1, 2, 3, 4, 5]

try:
    index = int(input("Enter the index: "))
    value = my_list[index]
    print(f"Value at index {index}: {value}")
except IndexError:
    print("Index is out of range. Please enter a valid index.")
except ValueError:
    print("Invalid input. Please enter a valid integer index.")