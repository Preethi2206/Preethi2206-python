import numpy as np
array = np.array([1, 2, 3, 4, 5])
print("Original array:")
print(array)
array = np.append(array, 6)
print("\nArray after adding an item (6):")
print(array)
array = np.append(array, [7, 8, 9])
print("\nArray after adding multiple items (7, 8, 9):")
print(array)
array = np.delete(array, 1)
print("\nArray after removing the second item (index 1):")
print(array)
array = np.delete(array, [0, 2])
print("\nArray after removing the first and third items (indices 0 and 2):")
print(array)